<% @posts.each do |post| %>
  <div class="container">
      <div class="panel panel-default">
        <div class="panel-heading">
          <div class="post-author">
            <%= link_to "#{post.user.email}", user_path(post.user) %><br>
          </div>
          <%= "#{post.created_at.strftime("%B %d")} at #{post.created_at.strftime("%I:%M%P")}" %>
        </div>
      <div class="panel-body">
        <ul class="list-unstyled">
          <li>  <%= post.content %></li>
          <li class="divider"></li>
          <li><%= render partial: 'users/like_form', locals: { post: post } %></li>
        </ul>
      </div>
      <div class="panel-footer">
        <%= render partial: 'comments/comments', locals: { post: post } %>
        <%= render partial: 'comments/comment_form', locals: { post: post } %>
      </div>
      </div>
  </div>
<% end %>
