<h2>Create a post</h2>
<%= form_for @post do |f| %>
  <%= f.label :content, "Content: " %><br>
  <%= f.text_area :content %><br>
  <%= f.submit %>
<% end %>


<% @posts.each do |post| %>
  <li>
    <h4><%= "#{post.user.email} says:" %><br>
    <%= "#{post.content}" %></h4>
    <%= render partial: 'likes/like_form', locals: { post: post } %>
  </li><br>
    <%= render partial: 'comments/comment_form', locals: { post: post } %><br>
    <%= render partial: 'comments/comments', locals: { post: post } %>
<% end %>

